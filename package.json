{
  "name": "todown",
  "version": "1.0.0",
  "description": "Markdown-driven tasks",
  "main": "index.js",
  "scripts": {
    "deploy": "now",
    "postdeploy": "now alias",
    "prebuild": "rimraf static && mkdirp static",
    "build": "run-s build:*",
    "build:js": "buble src/index.js --output static/index.js",
    "build:css": "lessc src/index.less static/index.css",
    "prestart": "npm run build",
    "dev": "run-p dev:*",
    "dev:serve": "nodemon index.js",
    "dev:watch": "run-p watch:*",
    "start": "node index.js",
    "test": "ava --verbose",
    "watch:css": "chokidar 'src/**/*.less' --command 'npm run build:css'",
    "watch:js": "chokidar 'src/**/*.js' --command 'npm run build:js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phortuin/todown.git"
  },
  "author": "Anne Fortuin",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "bugs": {
    "url": "https://github.com/phortuin/todown/issues"
  },
  "ava": {
    "require": "module-alias/register"
  },
  "now": {
    "alias": "todown",
    "regions": [
      "bru"
    ]
  },
  "_moduleAliases": {
    "@lib": "lib",
    "@routes": "app/routes",
    "@models": "app/models"
  },
  "dependencies": {
    "bluebird": "3.5.1",
    "body-parser": "1.18.3",
    "buble": "0.19.3",
    "dotenv-safe": "6.0.0",
    "express": "4.16.3",
    "express-mongo-sanitize": "1.3.2",
    "less": "3.7.1",
    "marked": "0.4.0",
    "mkdirp": "0.5.1",
    "module-alias": "2.1.0",
    "moment": "2.22.2",
    "mongoose": "5.2.2",
    "npm-run-all": "4.1.3",
    "nunjucks": "3.1.3",
    "rimraf": "2.6.2"
  },
  "devDependencies": {
    "ava": "0.25.0",
    "chokidar-cli": "1.2.0",
    "nodemon": "1.17.5"
  }
}

{
  "name": "todown",
  "version": "1.0.0",
  "description": "Markdown-driven tasks",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf static/ && mkdirp static/",
    "build": "run-s build:*",
    "build:js": "buble src/index.js --output static/index.js",
    "build:css": "lessc src/index.less static/index.css",
    "prestart": "npm run build",
    "start": "npm run start:prod",
    "start:dev": "cross-env NODE_ENV=development nodemon index.js",
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "chokidar 'src/**/*.less' --command 'npm run build:css'",
    "watch:js": "chokidar 'src/**/*.js' --command 'npm run build:js'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/phortuin/todown.git"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=7.0.0"
  },
  "devDependencies": {
    "chokidar-cli": "1.2.0",
    "nodemon": "1.11.0"
  },
  "dependencies": {
    "buble": "0.15.2",
    "cross-env": "3.2.3",
    "express": "4.15.2",
    "less": "2.7.2",
    "marked": "0.3.6",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.0.2",
    "nunjucks": "3.0.0",
    "rimraf": "2.6.1"
  }
}
